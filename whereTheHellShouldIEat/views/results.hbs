<head>
		<h1>How about...</h1>
		<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
		<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
		<script type="text/javascript" src="/javascripts/gmaps.js"></script>
	</head>
	<body>
		<div id = "containerResult">
			<div id = "rest">
				<h3>{{rest.name}}</h3>
				<h4>{{rest.address}}</h4>
				<h4>New York, {{rest.region}} {{rest.postcode}}</h4>
				 <form action="/pickforme" id = "tryAgain">
					<input type="submit" class="btn btn-custom" value="Hell no. Pick something better">
				</form>
				{{#if user}}
					<form role="form" method = "POST" action = "">
	      		<button type="submit" class="btn btn-custom">Actually, I like this place. Save it</button>
	    		</form>
				{{/if}}
			<!-- 	the following lat and long are hidden in css - don't want it to be displayed, but I need the 
				id to be present so I can target it in the DOM -->
				<h5 id = "lat"> {{rest.latitude}} </h5>
				<h5 id = "long"> {{rest.longitude}} </h5>
			</div>
			<div id="map">
		  	<script src = "/javascripts/myGmapsScript.js"></script>
		  </div>
		</div>
	</body>

